<Rule Name="AppHostRemoteDebugger" DisplayName="Ordinateur distant" PageTemplate="debugger" Order="300" Description="Options de débogueur distant" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.Metadata>
    <sys:Guid x:Key="DebugTargetTypeCommandGuid">FEEA6E9D-77D8-423F-9EDE-3970CBB76125</sys:Guid>
    <sys:UInt32 x:Key="DebugTargetTypeCommandId">0x400</sys:UInt32>
  </Rule.Metadata>

  <Rule.DataSource>
    <DataSource Persistence="UserFile"/>
  </Rule.DataSource>

  <Rule.Categories>
    <Category Name="StartOptions" DisplayName="Options de démarrage" Description="Options de démarrage"/>
    <Category Name="RemoteOptions" DisplayName="Options d'accès à distance" Description="Options d'accès à distance"/>
  </Rule.Categories>

  <BoolProperty Name="LaunchApplication" DisplayName="Lancer l'application" Category="StartOptions" F1Keyword="javascript.project.property.debugging.launchapplication" Description="Indique si le démarrage de l'application se produit immédiatement ou s'il intervient une fois que l'application a été déboguée."/>

  <BoolProperty Name="AllowLocalNetworkLoopback" DisplayName="Autoriser le bouclage de réseau local" Category="StartOptions" F1Keyword="javascript.project.property.debugging.allowlocalnetworkloopback" Description="Lors du débogage d'une application du Windows Store, vous permet d'utiliser des services locaux, de déboguer le trafic réseau et d'utiliser un bouclage local pour communiquer avec des composants sur le même ordinateur."/>

  <EnumProperty Name="DebuggerType" DisplayName="Type de débogueur" Category="StartOptions" F1Keyword="javascript.project.property.debugging.debuggertype" Description="Désigne le débogueur à activer. Quand la valeur est Mixte, les débogueurs pour code managé et natif sont utilisés.">
    <EnumValue Name="NativeOnly" DisplayName="Natif uniquement" Description="Natif uniquement"/>
    <EnumValue Name="ManagedOnly" DisplayName="Managé uniquement" Description="Managé uniquement"/>
    <EnumValue Name="Script" DisplayName="Script uniquement" Description="Script uniquement"/>
    <EnumValue Name="Mixed" DisplayName="Mixte (managé et natif)" Description="Mixte (managé et natif)"/>
    <EnumProperty.Metadata>
      <NameValuePair Name="IsDebugType" Value="true"/>
    </EnumProperty.Metadata>
  </EnumProperty>

  <StringProperty Name="CommandLineArgs" DisplayName="Arguments de ligne de commande" Category="StartOptions" F1Keyword="javascript.project.property.debugging.commandlineargs" Description="Permet de spécifier les arguments de ligne de commande passés au lancement de l'application UWP">
  </StringProperty>

  <StringProperty Name="MachineName" DisplayName="Nom de l'ordinateur" Category="RemoteOptions" F1Keyword="javascript.project.property.debugging.machinename" Description="Spécifie le nom de l'ordinateur à utiliser lors du débogage à distance.  Utilisez la zone de liste déroulante pour trouver des ordinateurs proches.">
    <StringProperty.ValueEditors>
      <ValueEditor EditorType="JsRemoteDebuggerOptionsPropertyEditor" DisplayName="&lt;Rechercher...&gt;">
        <ValueEditor.Metadata>
          <NameValuePair Name="AuthenticationPropertyName" Value="RequireAuthentication"/>
        </ValueEditor.Metadata>
      </ValueEditor>
    </StringProperty.ValueEditors>
  </StringProperty>

  <EnumProperty Name="RequireAuthentication" DisplayName="Demander une authentification" Category="RemoteOptions" F1Keyword="javascript.project.property.debugging.requireauthentication" Description="Spécifie le niveau d'authentification nécessaire durant le débogage sur des appareils distants.">
    <EnumValue Name="false" DisplayName="Aucun" Description="Aucune authentification"/>
    <EnumValue Name="true" DisplayName="Windows" Description="Authentification Windows"/>
    <EnumValue Name="Universal" DisplayName="Universel (protocole non chiffré)" Description="Authentification universelle"/>
  </EnumProperty>
</Rule>
